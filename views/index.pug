doctype html
html(lang="en")
  head
    include includes/head.pug
    script(defer src="/p/index.js")
  body
    .index-wrapper
      each m in Object.keys(s)
        .month
          h2.month-name #{s[m].display}
          each f in Object.keys(s[m].days)
            div(class="movie "+s[m].days[f].color id="mov"+s[m].number+f)
              if s[m].days[f].title
                .movie-cover(style="background-image: url("+s[m].days[f].cover+")")
                .movie-content
                  p.movie-date #{s[m].number}.#{f}
                  a.movie-link(href="/movie/"+m+"/"+f+"/")
                    h4.movie-name #{s[m].days[f].title}
              else
                .movie-content
                  p.movie-date #{s[m].number}.#{f}
                  a.movie-add(href="/add/"+m+"/"+f+"/")
                    h4.movie-add-title Add Movie