doctype html
html(lang="en")
  head
    include includes/head.pug
    script(defer src="/p/main.js")
  body
    .wrapper
      each m in Object.keys(s)
        .month
          h2.month-name #{s[m].display}
          each f in Object.keys(s[m].days)
            div(class="movie "+s[m].days[f].color id=s[m].number+f)
              if s[m].days[f].title
                img.movie-cover(src=s[m].days[f].cover, alt=s[m].days[f].title)
                .movie-content
                  p.movie-date #{s[m].number}.#{f}
                  a.movie-link(href="/movie/"+m+"/"+f+"/")
                    h4.movie-name #{s[m].days[f].title}
              else
                .movie-content
                  p.movie-date #{s[m].number}.#{f}
                  a.movie-add(href="/add/"+m+"/"+f+"/")
                    h4.movie-add-title Add Movie